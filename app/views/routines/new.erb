<div id="routine_wrapper">

<h1>Log your exercise!</h1>

<div id="routine-ui-wrapper">

  <div class="ui form">
    <%= form_for @routine do |f| %>
        <% if current_user %>
          <h3><%= current_user.username %></h3>
          <%= f.hidden_field :user_id, value: current_user.id %>
        <% end %>
      <%= f.label :exercise %>
      <%= f.collection_select :exercise_id, Exercise.all, :id, :name %>
    <br>
    <br>
    <%= f.label :reps %>
    <%= f.text_field :reps %>
    <br>
    <br>
    <%= f.submit %>
    <% end %>
  </div>

</div>


</div>
