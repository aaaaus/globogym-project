<h1>Login</h1>

<h2><%= flash[:notice] %></h2>

<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <br>
  <div class="ui buttons">
  <button class="ui button"><%= link_to 'Login' %></button>
  <% end %>
  <button class="ui button"><%= link_to "Signup", new_user_path %></button>
  </div>
